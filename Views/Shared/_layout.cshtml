<script>
    function updateMemoBadge() {
        $.ajax({
            url: '@Url.Action("GetJumlahMemoBaru", "Memo")',
            type: 'GET',
            success: function (data) {
                if (data > 0) {
                    $("#memoBadge").text(data).show();
                } else {
                    $("#memoBadge").hide();
                }
            }
        });
