@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Detail Fase Planning";
}



<table class="table table-striped table-responsive" id="tabelku">
    <thead>
        <tr>
            <th>Kode Project</th>
            <th>Tanggal SLA/Timeline</th>
            <th>Disiplin</th>
            <th>Pekerjaan</th>
            <th>Status Kontrak</th>
            <th>Status Pekerjaan</th>
            <th>Task</th>
            <th>PIC</th>
         
            <th>Target</th>
            <th>Kategori Equipment</th>
            <th>Kategori Maintenance</th>
            <th>Area</th>
            <th>Direksi</th>
            <th>Jenis Kontrak</th>
            <th>Planner</th>
            <th>No Memo Rekomendasi</th>
            <th>Tanggal Masuk Memo</th>
            <th>No Memo Kirim Paket</th>
            <th>Tanggal Kirim Paket</th>
            <th>Status Next Contract</th>
            <th>Informasi Detail</th>
            <th>Nomor PR Kontrak Baru</th>
            <th>Tanggal Update</th>
            <th>Tahun</th>
            <th>Tipe Project</th>
            <th>Jenis Project</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Kode_Project</td>
                <td><b>@item.Tanggal.ToString("dd-MM-yyyy")</b></td>
                <td>@item.Disiplin</td>
                <td>@item.Pekerjaan</td>
                <td>@item.Status_kontrak</td>
                <td>@item.ResumeStatusPekerjaan</td>
                <td>@item.Task</td>
                <td>@item.Pic</td>
               
                <td>@item.Target.ToString("dd-MM-yyyy")</td>
                <td>@item.Kategori_Equipment</td>
                <td>@item.Kategori_Maintenance</td>
                <td>@item.Area</td>
                <td>@item.Direksi</td>
                <td>@item.Jenis_Kontrak</td>
                <td>@item.Planner</td>
                <td>@item.No_Memo_Rekomendasi</td>
                <td>@item.Tanggal_Masuk_Memo?.ToString("dd-MM-yyyy")</td>
                <td>@item.No_Memo_Kirim_Paket</td>
                <td>@item.Tanggal_Kirim_Paket?.ToString("dd-MM-yyyy")</td>
                <td>@item.Status_Next_Contract</td>
                <td>@item.Informasi_Detail</td>
                <td>@item.Nomor_PR_Kontrak_Baru</td>
                <td>@item.Tanggal_Update?.ToString("dd-MM-yyyy")</td>
                <td>@item.Tahun</td>
                <td>@item.Tipe_Project</td>
                <td>@item.Jenis_Project</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index", "Home2")" class="btn btn-primary">Kembali ke Dashboard</a>


@section Scripts {
    <!-- Tambahkan library DataTables -->


    <script>
        $(document).ready(function () {
            $('#tabelku').DataTable({
                paging: true, // Aktifkan Pagination
                searching: true, // Aktifkan Filter/Searching
                ordering: true, // Aktifkan Sorting
                columnDefs: [
                    { orderable: false, targets: 2 } // Kolom 'Actions' tidak diurutkan
                ]
            });
        });
    </script>

    }