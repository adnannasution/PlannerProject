@model Plan.Models.TaskMaster

@{
    ViewData["Title"] = "Create Task";
}

<h2>Create Task</h2>

<form asp-action="Create" method="post">
  @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="Task">Task</label>
        <input type="text" asp-for="Task" class="form-control" required/>
        <span asp-validation-for="Task" class="text-danger"></span>
    </div>

        <div class="form-group">
        <label for="Task">SLA</label>
        <input type="text" asp-for="Sla" class="form-control" required/>
        <span asp-validation-for="Sla" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
