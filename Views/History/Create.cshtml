@{
    ViewData["Title"] = "Import History Data";
}

<h2>Import History Data</h2>

<form asp-action="Import" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Select Excel File</label>
        <input type="file" name="file" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>

<form asp-action="ClearTable" method="post" class="mt-3">
    <button type="submit" class="btn btn-danger">Clear Table</button>
</form>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["ErrorMessage"]
    </div>
}
