@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Detail Fase Execution";
}

<style>
.swal2-popup {
    width: 60% !important; /* Makes the popup width 80% of the screen */
    max-width: 1300px !important; /* Adjust to a maximum size */
}
</style>

<!-- Tabel untuk menampilkan 4 kolom pertama saja -->
<table class="table table-striped table-responsive" id="tabelku">
    <thead>
        <tr>
            <th>Kode Project</th>
            <th>Pekerjaan</th>
            <th>Tanggal SLA/Timeline</th>
            <th>Start Date</th>
            <th style="display:none;">End Date MPL</th>
            <th style="display:none;">Amandemen Waktu</th>
            <th style="display:none;">End Date</th>
            <th style="display:none;">Durasi Kontrak</th>
            <th style="display:none;">Durasi Aktual HK</th>
            <th style="display:none;">Date LKP</th>
            <th style="display:none;">Plan Progress Fisik</th>
            <th style="display:none;">Progress Fisik 0</th>
            <th style="display:none;">Progress Fisik</th>
            <th style="display:none;">Status Performance</th>
            <th style="display:none;">Progress Finansial</th>
            <th style="display:none;">LKP Time Limit</th>
            <th style="display:none;">Status Pekerjaan</th>
            <th style="display:none;">Task</th>
            <th style="display:none;">PIC</th>
            <th style="display:none;">Target</th>
            <th>Detail</th> <!-- Tombol Detail -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Kode_Project</td>
                <td>@item.Pekerjaan</td>
                <td><b>@item.Tanggal.ToString("dd-MM-yyyy")</b></td>
                <td>@item.Start_Date.ToString("dd-MM-yyyy")</td>
                <td style="display:none;">@item.End_Date_MPL.ToString("dd-MM-yyyy")</td>
                <td style="display:none;">@item.Amandemen_Waktu</td>
                <td style="display:none;">@item.End_Date.ToString("dd-MM-yyyy")</td>
                <td style="display:none;">@item.Durasi_Kontrak</td>
                <td style="display:none;">@item.Durasi_Aktual_HK</td>
                <td style="display:none;">@item.Date_LKP</td>
                <td style="display:none;">@item.Plan_Progress_Fisik</td>
                <td style="display:none;">@item.Progress_Fisik_0</td>
                <td style="display:none;">@item.Progress_Fisik</td>
                <td style="display:none;">@item.Status_Performance</td>
                <td style="display:none;">@item.Progress_Finansial</td>
                <td style="display:none;">@item.LKP_Time_Limit</td>
                <td style="display:none;">@item.ResumeStatusPekerjaan</td>
                <td style="display:none;">@item.Task</td>
                <td style="display:none;">@item.Pic</td>
                <td style="display:none;">@item.Target?.ToString("dd-MM-yyyy")</td>
                <td>
                    <button class="btn btn-info btn-sm" onclick="showDetail(
                        '@item.Kode_Project', 
                        '@item.Pekerjaan',
                        '@item.Tanggal.ToString("dd-MM-yyyy")',
                        '@item.Start_Date.ToString("dd-MM-yyyy")',
                        '@item.End_Date_MPL.ToString("dd-MM-yyyy")',
                        '@item.Amandemen_Waktu',
                        '@item.End_Date.ToString("dd-MM-yyyy")',
                        '@item.Durasi_Kontrak',
                        '@item.Durasi_Aktual_HK',
                        '@item.Date_LKP.ToString("dd-MM-yyyy")',
                        '@item.Plan_Progress_Fisik',
                        '@item.Progress_Fisik_0',
                        '@item.Progress_Fisik',
                        '@item.Status_Performance',
                        '@item.Progress_Finansial',
                        '@item.LKP_Time_Limit',
                        '@item.ResumeStatusPekerjaan',
                        '@item.Task',
                        '@item.Pic',
                        '@item.Target?.ToString("dd-MM-yyyy")'
                    )">Detail</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index", "Home")" class="btn btn-primary">Kembali ke Dashboard</a>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function showDetail(kodeProject, pekerjaan, tanggal, startDate, endDateMPL, amandemen, endDate, durasiKontrak, durasiAktualHK, dateLKP, planProgressFisik, progressFisik0, progressFisik, statusPerformance, progressFinansial, lkpTimeLimit, statusPekerjaan, task, pic, target) {
            Swal.fire({
                title: 'Detail Project',
                html: `
                <div style="display: flex; justify-content: space-between;">
                    <div style="flex: 1; margin-right: 10px; text-align: left;">
                        <p><strong>Kode Project:</strong> ${kodeProject}<hr></p>
                        <p><strong>Pekerjaan:</strong> ${pekerjaan}<hr></p>
                        <p><strong>Tanggal SLA/Timeline:</strong> ${tanggal}<hr></p>
                        <p><strong>Start Date:</strong> ${startDate}<hr></p>
                        <p><strong>End Date MPL:</strong> ${endDateMPL}<hr></p>
                        <p><strong>Amandemen Waktu:</strong> ${amandemen}<hr></p>
                        <p><strong>End Date:</strong> ${endDate}<hr></p>
                        <p><strong>Durasi Kontrak:</strong> ${durasiKontrak}<hr></p>
                        <p><strong>Durasi Aktual HK:</strong> ${durasiAktualHK}<hr></p>
                        <p><strong>Date LKP:</strong> ${dateLKP}<hr></p>
                    </div>
                    <div style="flex: 1; margin-left: 10px; text-align: left;">
                        <p><strong>Plan Progress Fisik:</strong> ${planProgressFisik}<hr></p>
                        <p><strong>Progress Fisik 0:</strong> ${progressFisik0}<hr></p>
                        <p><strong>Progress Fisik:</strong> ${progressFisik}<hr></p>
                        <p><strong>Status Performance:</strong> ${statusPerformance}<hr></p>
                        <p><strong>Progress Finansial:</strong> ${progressFinansial}<hr></p>
                        <p><strong>LKP Time Limit:</strong> ${lkpTimeLimit}<hr></p>
                        <p><strong>Status Pekerjaan:</strong> ${statusPekerjaan}<hr></p>
                        <p><strong>Task:</strong> ${task}<hr></p>
                        <p><strong>PIC:</strong> ${pic}<hr></p>
                        <p><strong>Target:</strong> ${target}<hr></p>
                    </div>
                </div>`,
                confirmButtonText: 'Close'
            });
        }
    </script>
}
