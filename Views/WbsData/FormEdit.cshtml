@model Plan.Models.WbsData

@{
    ViewBag.Title = "Edit WbsData";
}



<form asp-action="Edit" method="post">
  @Html.AntiForgeryToken()
<div class="form-group">
    <label for="Bulan">Bulan</label>
    <select asp-for="Bulan" class="form-control" id="Bulan">
        <option value="January">January</option>
        <option value="February">February</option>
        <option value="March">March</option>
        <option value="April">April</option>
        <option value="May">May</option>
        <option value="June">June</option>
        <option value="July">July</option>
        <option value="August">August</option>
        <option value="September">September</option>
        <option value="October">October</option>
        <option value="November">November</option>
        <option value="December">December</option>
    </select>
</div>

    <div class="form-group">
        <label>Tahun</label>
        <input asp-for="Tahun" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label>Actual WBS RT</label>
         <div id="ActualWbsRtLabel" class="currency-label text-primary"></div> 
        <input asp-for="ActualWbsRt" class="form-control" type="number" step="0.01" id="ActualWbsRt" oninput="formatCurrency(this, 'ActualWbsRtLabel')" />
    </div>
    <div class="form-group">
        <label>% Actual</label>
        <input asp-for="PercentActual" class="form-control" type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label>Commitment WBS RT</label>
         <div id="CommitmentWbsRtLabel" class="currency-label text-primary"></div> 
        <input asp-for="CommitmentWbsRt" class="form-control" id="CommitmentWbsRt"  oninput="formatCurrency(this, 'CommitmentWbsRtLabel')" type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label>% Commitment</label>
        <input asp-for="PercentCommitment" class="form-control" type="number" step="0.01"  />
    </div>
    <div class="form-group">
        <label>ROP WBS RT</label>
         <div id="RopWbsRtLabel" class="currency-label text-primary"></div>
        <input asp-for="RopWbsRt" class="form-control" oninput="formatCurrency(this, 'RopWbsRtLabel')" type="number" id="RopWbsRt" step="0.01" />
    </div>
    <div class="form-group">
        <label>% ROP</label>
        <input asp-for="PercentRop" class="form-control" type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label>% Forecasting</label>
        <input asp-for="PercentForecasting" class="form-control" type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label>Jenis Biaya</label>
        <input asp-for="JenisBiaya" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>



<script>
    function formatCurrency(inputElement, labelId) {
        var value = parseFloat(inputElement.value);
        var label = document.getElementById(labelId);
        
        if (!isNaN(value)) {
            // Format as currency and update the label text
            label.innerHTML = value.toLocaleString('en-US', {
                style: 'currency',
                currency: 'USD'
            }).replace('$', ''); // Remove '$' sign
        } else {
            // If value is not a number, reset label to 0
            label.innerHTML = '0';
        }
    }
</script>
