@{
    Layout = null; // This disables the layout for this view.
    ViewData["Title"] = "iPLANNER";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
        /* Mengatur posisi SweetAlert agar tidak mempengaruhi form */
        .swal2-container {
            z-index: 9999; /* Pastikan SweetAlert muncul di atas form */
        }
    </style>
</head>
<body class="d-flex justify-content-center align-items-center vh-100"
      style="background: linear-gradient(to right, #6a0dad, #1e3a8a, #000000);">

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">

<div style="position: absolute; top: 20px; left: 20px; font-size: 32px; font-weight: bold; color: white; font-family: 'Montserrat', sans-serif;">
<i class="fas fa-project-diagram" style="font-size: 40px; color: white;"></i>
    iPLANNER
</div>


    <div class="container col-4 bg-white p-4 rounded shadow">
        <center>
            <img src="~/image/logo.jpeg" style="width:30%; border-radius: 40%;">
        </center>
        <form asp-action="Index" method="post">
            <div class="form-group mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="email" class="form-control" required />
            </div>
            <div class="form-group mb-3">
                <label for="pass" class="form-label">Password</label>
                <input type="password" id="pass" name="pass" class="form-control" required />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </div>
        </form>

        @* SweetAlert for login failure *@
        @if (ViewData.ModelState?.Values.Any(v => v.Errors.Count > 0) == true)
        {
<script>
    document.addEventListener("DOMContentLoaded", function () {
        Swal.fire({
            icon: 'error',
            title: 'Login Failed',
            text: 'Please check your credentials and try again.',
            toast: true,         // Membuat alert kecil di pojok
            position: 'top-end', // Posisi di pojok kanan atas
            showConfirmButton: false, // Tanpa tombol konfirmasi
            timer: 2000,         // Hilang otomatis setelah 2 detik
            timerProgressBar: true // Menampilkan progress bar
        });
    });
</script>

        }



        

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


